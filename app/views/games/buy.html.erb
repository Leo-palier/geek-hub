<div class="container shoppingcart">
  <section class="pt-5 pb-5">
    <td>
      <h1 class ="text-center shoppingcart">Shopping Cart</h1>
      <div class="row w-100">
        <div class="col-lg-12 col-md-12 col-12">
          <h3 class="display-5 mb-2 text-center"></h3>
          <p class="mb-5 text-center">
            <i class="text-info font-weight-bold">1 items in your cart</i></p>
          <table id="shoppingCart" class="table table-condensed table-responsive">
            <thead>
              <tr>
                <th style="width:60%">Product</th>
                <th style="width:12%">Price</th>
                <th style="width:10%">Quantity</th>
                <th style="width:16%"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td data-th="Product">
                  <div class="row">
                    <div class="col-md-12 text-left mt-sm-2">
                      <h4><%= @game.name%></h4>
                      <p class="font-weight-light"><%= @game.console%> <%= @game.year%></p>
                    </div>
                  </div>
                </td>
                <td data-th="Price"><%= @game.price%></td>
                <td data-th="Quantity">
                  <input type="number" class="form-control form-control-lg text-center" value="1">
                </td>
                <td class="actions" data-th="">
                  <div class="text-right">
                    <button class="btn btn-white border-secondary bg-white btn-md mb-2">
                      <i class="fas fa-sync"></i>
                    </button>
                    <button class="btn btn-white border-secondary bg-white btn-md mb-2">
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
          <div class="float-right text-right">
            <h4>Subtotal:</h4>
            <h1><%= @game.price%> â‚¬</h1>
          </div>
        </div>
      </div>
      <div class="checkout col-lg-12 col-md-12 col-12">
        <div class= "shopping">
          <%= link_to "Continue Shopping", root_path%>
        </div>
        <div class="btn-checkout">
          <%= link_to "Checkout", root_path, class: "btn", data: {confirm: "Awesome! Your purchase has been confirmed. Check your email for details"}%>
        </div>
      </div>
    </div>
  </div>
</section>
