<div class="container">
	<h1>Geek Hub</h1>
<p>Welcome !</p>

<div class="cards">
	<% @games.each do |game| %>
	<% if game.photo.attached? %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path game.photo.key %>)">
    <%= game.name%><%= link_to "🔍", game_path(game)  %>

  </div>
  <% end %>
  <% end %>

</div>

<%= link_to "Sign Up", "#", class: "btn btn-flat" %>
