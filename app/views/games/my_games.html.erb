<div class="home">
  <div class="container">
  	<h1><%= @user.username %></h1>
    <h2>My Games</h2>
    <%= link_to "Add a game", new_game_path %>
    <div class="cards">
      <% @games.each do |game| %>
        <% if game.photo.attached? %>        
        <%= link_to game_path(game) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path game.photo.key %>)">
            <%= game.name%>
          </div>
        <% end %>
      <% end %>
    <% end %>

    </div>

</div>
</div>