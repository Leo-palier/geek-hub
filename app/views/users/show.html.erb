<h1>Welcome on <%= @user.username %> profile ! </h1>

  <div id="reviews">
  <% if @user.reviews.blank? %>
    Be the first to leave a review for <%= @user.username %>
  <% else %>
    <% @user.reviews.each do |review| %>
    <p><%= review.rating %></p>
      <p><%= review.content %></p>
    <% end %>
  <% end %>
</div>
  <%= simple_form_for([ @user, @review ]) do |f| %>
  <%= f.input :rating%>
  <%= f.input :content, as: :text %>
  <%= f.button :submit %>
<% end %>