<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdna.artstation.com/p/assets/images/images/021/720/920/original/pixel-jeff-mario.gif?1572709433);">
  <!-- Barre de recherche -->
  <div class="container text-center">
    <div class="search">
      <%= simple_form_for :games_filter, url: games_path(anchor:"game-list"), method: :get do |f| %>
        <%= f.input :search, label: false, value: params.dig(:games_filter, :search) %>
        <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="container text-center">
    <h1> <strong>GEEK HUB</strong></h1>
    <%= link_to "Sign Up", new_user_registration_path, class: "sign-up" %>
  </div>
</div>
